{
    "manifest_version": 3,
    "name": "Glimpse",
    "version": "2.0.0",
    "description": "AI-powered find-in-page with liquid glass UI. Get instant insights about any webpage with OpenRouter.",
    "author": "Glimpse",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://openrouter.ai/api/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"],
        "css": ["findUI.css"]
      }
    ],
    "action": {
      "default_title": "Glimpse - Press Ctrl+F to search",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }